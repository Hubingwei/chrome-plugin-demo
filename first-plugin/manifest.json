{
  "manifest_version": 2,
  "name": "first-plugin",
  "version": "1.0.0",
  "description": "第一个Chrome插件",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "./js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "第一个Chrome插件",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.baidu.com/*"
      ],
      "js": [
        "./js/content.js"
      ]
    }
  ],
  "permissions": [
    "tabs"
  ],
  "omnibox": { "keyword": "go" }
}