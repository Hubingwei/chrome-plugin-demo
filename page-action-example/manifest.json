{
  "manifest_version": 2,
  "name": "page-action-example",
  "version": "1.0.0",
  "description": "page-action示例",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "./js/background.js"
    ]
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "page-action示例",
    "default_popup": "popup.html"
  },
  "permissions": [
    "declarativeContent",
    "tabs"
  ]
}